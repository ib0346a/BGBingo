        />
    <ImageView
        android:id="@+id/cloud_53"
        android:src="@drawable/cloud_blue6"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginStart="-50dp"
        android:layout_marginTop="225dp"
        />


    <TextView
        android:id="@+id/cloud_logout"
        android:layout_width="90dp"
        android:layout_height="55dp"
        android:background="@drawable/cloud_blue8"
        android:paddingTop="8dp"
        android:textSize="18sp"
        android:gravity="center"
        android:text="LOGOUT"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:layout_alignParentRight="true"/>
    <TextView
        android:id="@+id/group_stat_background"
        android:layout_width="325dp"
        android:layout_height="400dp"
        android:background="@drawable/number_background"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@xml/cloud_text"
        android:textAlignment="center"
        android:layout_marginTop="56dp"
        android:layout_centerHorizontal="true"
        />

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="390dp"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:paddingTop="2.5dp">
        />


        <TextView
            android:id="@+id/group_stat"
            android:layout_width="150dp"
            android:layout_height="280dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/statistic_background"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@xml/cloud_text"

            />

        <TextView
            android:id="@+id/group_winner"
            android:layout_width="95dp"
            android:layout_height="280dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/statistic_background"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@xml/cloud_text"
            android:textAlignment="center"
            android:layout_marginLeft="25dp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/new_game_button"
        android:text="Start New Game"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="465dp"
        android:textColor="@color/colorPrimary"
        android:background="@drawable/button_board"/>


    <TextView
        android:paddingTop="2.5dp"
        android:id="@+id/individual_stat_background"
        android:layout_width="270dp"
        android:layout_height="70dp"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@xml/cloud_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="370dp"
        android:textAlignment="center"
        />
    <TextView
        android:id="@+id/individual_stats"
        android:layout_width="290dp"
        android:layout_height="50dp"
        android:background="@drawable/statistic_background"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@xml/cloud_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        />


</RelativeLayout>